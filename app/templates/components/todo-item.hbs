<li class="{{if isCompleted 'completed'}}">
  <div class="view">
    <input class="toggle" type="checkbox" onclick={{action 'toggleComplete'}}>
    <label>{{label}}</label>
    <button class="destroy" onclick={{action destroyTodo}}></button>
  </div>
  <input class="edit" value="Create a TodoMVC template">
</li>