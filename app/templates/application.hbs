<section class="todoapp">
  <header class="header">
    <h1>todos</h1>
    {{new-todo placeholder="What needs to be done?" autofocus="true" createTodo=(action 'createTodo')}}
  </header>
  <section class="main">
    <ul class="todo-list">
      {{#each todos as |todo|}}
        {{todo-item label=todo.label isCompleted=todo.isCompleted destroyTodo=(action 'destroyTodo' todo)}}
      {{/each}}
    </ul>
  </section>
</section>
